<div class="single-notice-widget">
    <div class="site-heading">
        <h3>latest notice</h3>
    </div>
    <div class="noticebox">
        <div class="vticker">
            <ul>
                @{
                    string ImgPath;
                    int i = 0;
                    MangroveSpaceEntities db = new MangroveSpaceEntities();
                    List<dynamic> Information = Global.Sql(db, "select top 10 [ID],[NoticeID],[AttachFile],[NoticeName],[NoticeDate],[NoticeOrderID],[EntryDate] from [dbo].[AspCMSNotice] where [NoticeCategory]='1' and [NoticeStatus]=1 order by [NoticeOrderID] ASC").ToList();
                    foreach (dynamic item in Information)
                    {
                        i = i + 1;
                        <li>
                            <div class="notice-left">
                                <a href="#">
                                    <img src="~/Uploads/notice.jpg" />
                                </a>
                            </div>
                            <div class="notice-right">
                                <h3><a href="@Url.Action("NoticeDetails", "Notice", new { id = @item.NoticeID })">@item.NoticeName</a></h3>
                                <a href="@Url.Action("NoticeDetails", "Notice", new { id = @item.NoticeID })">Read more</a>
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
    <a href="@Url.Action("AllNotice","Notice")" class="theme-btn">More Notice</a>
</div>



