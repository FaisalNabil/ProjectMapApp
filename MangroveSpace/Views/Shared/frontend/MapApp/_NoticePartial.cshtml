
<div class="notice-area-widget margin-top">
    <div class="theme-heading">
        <h2>latest <span>Notice</span></h2>
        <div class="line-one"></div>
        <div class="line-two"></div>
    </div>
    <div class="noticebox">
        <div class="vticker">
            <ul>

                @{
                    string ImgPath;
                    int i = 0;
                    MangroveSpaceEntities db = new MangroveSpaceEntities();
                    List<dynamic> Information = Global.Sql(db, "select top 5 [ID],[NoticeID],[NoticeName],[NoticeDate],[NoticeOrderID],[EntryDate] from [dbo].[AspCMSNotice] where [NoticeCategory]='1' and [NoticeStatus]=1 order by [NoticeDate] DESC").ToList();
                    foreach (dynamic item in Information)
                    {

                        <li>
                            <div class="notice-left">
                                <a href="#">
                                    <img src="~/assets/front_assets/REBMSC/img/logo2.png" />
                                </a>
                            </div>
                            <div class="notice-right">
                                <h3><a href="/Notice/NoticeDetails/@item.NoticeID">@item.NoticeName</a></h3>
                                <a href="/Notice/NoticeDetails/@item.NoticeID">read more</a>
                            </div>
                        </li>

                    }
                }

            </ul>
        </div>
        <a href="@Url.Action("AllNotice","Notice")">view more</a>
    </div>
</div>

