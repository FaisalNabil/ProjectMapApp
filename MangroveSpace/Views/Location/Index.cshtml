@model IEnumerable<PowerPlant_Main>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/backend/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-title">
            <div class="row">
                <div class="col-md-6">
                    <h3>@ViewBag.Title</h3>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <div class="table-responsive">
                    <table class="PP table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Power Plant Name
                                </th>
                                <th>
                                    Country
                                </th>
                                <th>
                                    Latitude
                                </th>
                                <th>
                                    Longitude
                                </th>
                                <th>
                                    Address
                                </th>
                                <th></th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PowerPlant_Country.Country_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Latitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Longitude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location)
                                    </td>
                                    <td>
                                        <a class="btn btn-icon-toggle  btn-primary btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Edit row" href="@Url.Action("UpdateDetailsPage", "Location", new { pagetitle = @item.DetailsPageAddress })"><i class="fa fa-pencil"></i></a>
                                        <a class="btn btn-icon-toggle  btn-primary btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Code Edit" href="@Url.Action("UpdateDetailsPageCode", "Location", new { pagetitle = @item.DetailsPageAddress })"><i class="fa fa-code"></i></a>
                                        @*<a class="btn btn-icon-toggle  btn-primary btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Edit row" href="@Url.Action("Edit", "Pages", new { id = @item.ID })"><i class="fa fa-pencil"></i></a>
        <a class="btn btn-icon-toggle  btn-primary btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Code Edit" href="@Url.Action("pageCodeEdit", "Pages", new { id = @item.ID })"><i class="fa fa-code"></i></a>*@
                                        <a class="btn btn-icon-toggle btn-danger btn-xs alert_warning" data-toggle="tooltip" data-placement="top" data-original-title="Delete" data-pp-id=@item.ID><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
    </div>
</div>