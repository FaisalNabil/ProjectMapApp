@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>


        Dropzone.options.uploadWidget = {

        paramName: "file",
        maxFilesize: 20,
        maxFiles: 5,
        resizeWidth: 0,
        uploadMultiple: true,
        acceptedFiles: "image/*",
        parallelUploads: 1,
        addRemoveLinks: true,
        //[more configuration]

        init: function () {
            var myDropzone = this;

            $.get("@Url.Action("GetImages", "Albums",new { AID= Model.AspCMSAlbum.AID})", function (data) {
                if (data.Data != '') {
                    $.each(data.Data, function (index, item) {

                        // var mockFile = { name: "Pr6-3.jpg", size: 12345, type: 'image/jpeg' }

                        //myDropzone.options.addedfile.call(Dropzone, file)
                        //myDropzone.options.thumbnail.call(Dropzone, file,val)
                        //myDropzone.emit('complete', file)
                        //var mockFile = { name: "myimage.jpg", size: 12345, type: 'image/jpeg' };

                        //this.options.addedfile.call(this, key);
                        //this.options.thumbnail.call(this, key, "~/Uploads/Product/Pr6/Pr6-3.jpg");

                        //// Create the mock file:
                        var mockFile = {
                            name: item.name,
                            size: item.size,
                            serverFileName: item.name
                        };
                        // Call the default addedfile event handler
                        myDropzone.files.push(mockFile);
                        myDropzone.emit("addedfile", mockFile);
                        // And optionally show the thumbnail of the file:
                        myDropzone.emit("thumbnail", mockFile, item.path);
                        myDropzone.emit('complete', mockFile);


                    })
                }
            })

            this.on("success", function (file, serverFileName) {
                file.serverFileName = serverFileName;

            });
            this.on("removedfile", function (file) {
                x = confirm('Do you want to delete?');
                if (!x)
                {
                    return false;
                }
                if (file.serverFileName == "Error in saving file") {
                    file.previewElement.remove();
                    window.location = "http://www.yoururl.com";
                    return true;
                } else {
                    $.post("/Albums/DeleteImage/?deleteFile=" + encodeURIComponent(file.serverFileName));
                    file.previewElement.remove();
                    return true;
                }
            });
        }
        }


        //Image Preview
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.blah')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>


    <script>
        var table = $(".albumdetail").DataTable({
            "aLengthMenu": [[100, 150, 175, -1], [100, 150, 175, "All"]],
            "iDisplayLength": 100
        });
    </script>

    <script>
        $(".dropzone").dropzone({
            dictDefaultMessage: "<i class='fa fa-cloud-upload'></i> Click here or drop files to upload",
        });
    </script>
