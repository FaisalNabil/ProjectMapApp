/* Mobile Layout: 320px. */
@media only screen and (max-width: 767px) {

    .container {
        width: 100%
    }

    .site-responsive-menu {
        display: block
    }

    .mainmenu {
        display: none
    }

    .site-logo-img img {
        width: 75px
    }

    .site-logo-text > h1 {
        font-size: 20px
    }

    .header-search > form {
        top: 45px
    }

    .mainmenu-area {
        min-height: 50px
    }

    .owl-dots {
        top: 80%
    }

    .single-promo {
        margin-right: 0
    }

    .page-content-left {
        border: medium none
    }

    .pad-right {
        padding-right: 15px
    }

    .page-content-area .col-md-4 {
        padding-left: 15px
    }

    .single-footer-widget {
        margin: 30px 0
    }

    .copyright {
        text-align: center
    }

    .single-gallery-img {
        float: none;
        overflow: hidden
    }

    .gallery-img-itm {
        margin-right: 20px
    }

    .header-top-right-overlay {
        display: none
    }

    .header-top-left {
        text-align: center
    }

    .single-top-right {
        text-align: center;
        padding-bottom: 10px;
        margin-top: 0
    }

    .site-logo {
        width: 190px;
        margin: 0 auto;
    }
    .header-right-option{
        display: none
    }
    .big-responsive-menu{
        display: block
    }
    .big-main-slide{
        height: 320px
    }
    .big-main-caption h2{
        font-size: 30px;
        line-height: 40px
    }
    .about-right{
        margin-top: 30px
    }
    .single-notice-widget{
        margin-bottom: 30px
    }
    .single-footer{
        margin: 30px 0
    }

}

