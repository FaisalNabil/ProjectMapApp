@using Microsoft.Ajax.Utilities

<div class="slider-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="header-notice-left">
                    <ul class="marquee">
                        @{
                            string ImgPath;
                            int i = 0;
                            MangroveSpaceEntities db = new MangroveSpaceEntities();
                            List<dynamic> Information = Global.Sql(db, "select top 5 [ID],[NoticeID],[AttachFile],[NoticeName],[NoticeDate],[NoticeOrderID],[EntryDate] from [dbo].[AspCMSNotice] where [NoticeCategory]='1' and [NoticeStatus]=1 order by [NoticeDate] DESC").ToList();
                            foreach (dynamic item in Information)
                            {

                                <li>
                                    <p><a href="/Notice/NoticeDetails/@item.NoticeID"><span>@item.NoticeName</span></a></p> | 
                                </li>

                            }
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>







