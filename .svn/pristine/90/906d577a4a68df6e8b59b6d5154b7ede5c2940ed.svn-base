@model IEnumerable<MangroveSpace.AspNetRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/backend/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-title">
            <div class="row">
                <div class="col-md-6">
                    <h3>@ViewBag.Title</h3>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create", "Roles")" class="btn btn-success">Add Role</a>
                </div>
            </div>

        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">

                <div class="table-responsive">
                    <table id="Categorytable" class=" table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Role Name</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                var i = 1;
                                foreach (dynamic item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td class="col-md-2" align="right">
                                            <div class="btn-toolbar">
                                                <div class="btn-group pull-right" style="margin:10px 0">
                                                    <a class="btn btn-icon-toggle btn-danger btn-xs alert_warning" data-toggle="tooltip" data-placement="top" data-user-title="Delete" href="@Url.Action("Delete", "Roles", new { id = @item.Id })"><i class="fa fa-trash"></i></a>
                                                </div>
                                            </div>

                                        </td>
                                    </tr>
                                    i = i + 1;
                                }
                            }
                        </tbody>
                    </table>
                </div>



            </div>
        </div>
    </div>
</div>

