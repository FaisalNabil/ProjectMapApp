                        <div class="header">
                            <p>স্বাগতম...</p>
                        </div>
                    </div>
                    <div class="col-lg-6 text-right">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <a style="color:#fff" href="javascript:document.getElementById('logoutFoddddrm').submit()"> Log Out</a>
                                }

                            }
                            else
                            {
                                <a style="color:#fff" href="/Account/Login">Login</a>
                            }
                        }
                        <div class="briffs-responsive-menu"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
