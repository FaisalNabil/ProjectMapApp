@model IEnumerable<dynamic>

<div class="title-sec inner-page-title">
    <h3 style="margin-bottom:10px">All Notice</h3>
</div>


@if (Model != null)
{

<table id="example" class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th>Notice Title</th>
            <th>Notice Date</th>
            <th>Download</th>
        </tr>
    </thead>

    <tbody>

        @{
            string ImgPath;
            int i = 0;
            MangroveSpaceEntities db = new MangroveSpaceEntities();
            List<dynamic> Information = Global.Sql(db, "select *  from [dbo].[AspCMSNotice] where [NoticeCategory]='1' and [NoticeStatus]=1 order by [NoticeOrderID] ASC").ToList();
            foreach (dynamic item in Information)
            {

                <tr>
                    <td style="padding:10px"><a href="/Notice/NoticeDetails/@item.NoticeID">@item.NoticeName</a></td>
                    <td>@item.NoticeDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a href="@item.AttachFile" target="_blank" class="btn btn-sm btn-info">Download</a>
                    </td>
                </tr>

            }
        }



        
    </tbody>
</table>


}

